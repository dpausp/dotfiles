[user]
	name = dpausp
	email = dpausp@posteo.de
[alias]
    co = checkout
    re = rebase
    me = merge
    mn = merge --no-ff
    id = rev-parse HEAD 
    br = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
[push] 
    default = simple
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
[color]
    ui = false
    status = true
    pull = true
    fetch = true
    push = true
	interactive = true
[core]
	excludesfile = ~/.gitignore_global
[rebase]
	instructionFormat = %at <%ae> %s
[protocol "http"]
allow = never
[protocol "git"]
allow = never
[fetch]
        fsckObjects = true
[transfer]
        fsckObjects = true
[receive]
        fsckObjects = true
